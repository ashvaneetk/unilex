<?xml version="1.0" encoding="UTF-8"?>
<metadata
    xmlns="http://swordapp.org/about/"
    xmlns:dc="http://purl.org/dc/elements/1.1/"
    xmlns:lom="http://ltsc.ieee.org/xsd/LOM">
    <dc:title>{{ record.title }}</dc:title>
    <dc:description>{{ record.description }}</dc:description>
    <notes>{{ record.notes }}</notes>
    <name>{{ record.name }}</name>
    <taggingConfidence>High</taggingConfidence>
    <lom:metaMetadata>
        <lom:identifier>
            <lom:entry>{{ record.node_id }}</lom:entry>
        </lom:identifier>
    </lom:metaMetadata>
    {% for tag in tags %}
    <lom:classification>
        <lom:taxonPath>
            <lom:source>
                <lom:string language="{#{ tag.vocabulary.language.iso }#}en-GB">{{ tag.vocabulary.node_id }}</lom:string>
            </lom:source>
            <lom:taxon>
                <lom:id>{{ tag.node_id }}</lom:id>
            </lom:taxon>
        </lom:taxonPath>
    </lom:classification>
    {% endfor %}
</metadata>
